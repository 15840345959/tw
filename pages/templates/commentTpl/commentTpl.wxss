.tw-title {
  position: absolute;
  top: 24px;
  left: 0px;
  color: #fff;
  max-width: 340px;
}

.tw-title-div {
  display: inline-flex;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.tw-date {
  position: absolute;
  top: 44px;
  left: 0px;
  max-width: 340px;
}


.tw-div-shadow {
  box-shadow: 2px 2px 6px #e9f4ff;
}

.tw-img {
  width: 100%;
  height: 150px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.tw-img-u {
  width: 100%;
  height: 180px;
  border-radius: 5px;
}
