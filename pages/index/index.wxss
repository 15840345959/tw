/**index.wxss**/

.page {
  background-color: #f8f8f8;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.line-text {
  font-size: 18px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}

.image-container {
  position: relative;
}

.item-mask {
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 2px;
  padding: 25px 15px 15px;
  background-image: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
}
