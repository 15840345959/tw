/**index.wxss**/

.navbar {
  display: flex;
  border-bottom: 1px solid #eee;
}

.navbar-item {
  flex: 1.0;
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-bottom: -1px;
}

.navbar-text {
  display: block;
  width: 30px;
  padding: 10px;
  margin: auto;
}

.navbar-text.active {
  border-bottom: 2px solid #000;
  color: #000;
  font-weight: bold;
}

.hidden {
  display: none;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.line-text {
  font-size: 18px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}

.image-container {
  position: relative;
}

.item-mask {
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 2px;
  padding: 25px 15px 15px;
  background-image: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
}
