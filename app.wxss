.mask-div-black {
  background: rgba(0, 0, 0, 0.15);
  position: absolute;
  top: 0px;
  left: 0px;
}

.head-bg {
  width: 100%;
  height: 220px;
}

.tw-title {
  position: absolute;
  left: 8px;
  top: 18px;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 340px;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.tw-title-oneline {
  position: absolute;
  left: 8px;
  top: 18px;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 280px;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.tw-date {
  position: absolute;
  left: 8px;
  top: 50px;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 340px;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.tw-bottom-left {
  position: absolute;
  bottom: 20px;
  left: 10px;
}

.tw-bottom-right {
  position: absolute;
  bottom: 20px;
  right: 15px;
}

.gray-filter {
  filter: gray; /* 黑白图片 */
}

.top-search-bar {
  position: fixed;
  top: 0px;
  z-index: 999;
  width: 100%;
}

.hidden {
  display: none;
}

.text-shadow-grey {
  text-shadow: 3px 2px 2px #666;
